@{
    Layout = "_Layout";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Data Page</h1>
        <p class="lead">You can update or display the course information.</p>
    </div>
</div>

<div class="container space-between">
    <div class="form-group">
        <label for="InputSelectionName">Course Name</label>
        <select class="form-control" id="InputSelectionName">
            <option>Programming I</option>
            <option>Software Engineering Fundamentals</option>
            <option>Web Interface Design</option>
            <option>Unix/Linux Operating Systems</option>
            <option>Software Engineering Methodologies 1</option>
        </select>
    </div>
</div>

<div class="container">
    <hr />
</div>

<div class="container space-between" id="display">
    <div class="card">
        <h5 class="card-header">Course</h5>
        <div class="card-body">
            <p><strong>Name: </strong>Programming I</p>
            <p><strong>Code: </strong>COMP-100</p>
            <p><strong>Description: </strong>COMP100 is an introductory course in programming. It includes programming concepts, logic and program structures.</p>
            <p><strong>Season: </strong>Winter</p>
            <p><strong>Sections: </strong>001, 002, 003</p>
            <p><strong>Status: </strong>Open</p>
        </div>
    </div>
</div>

<div class="container" id="update" style="display:none">
    <form class="space-between">
        <div class="form-group">
            <label for="InputName">Course Name</label>
            <input type="text" class="form-control" id="InputName" value="Programming I">
            <small id="nameHelp" class="form-text text-muted">Enter the full name of the course.</small>
        </div>
        <div class="form-group">
            <label for="InputCode">Course Code</label>
            <input type="text" class="form-control" id="InputCode" value="COMP-100">
            <small id="codeHelp" class="form-text text-muted">Enter the code of the course.</small>
        </div>
        <div class="form-group">
            <label for="FormControlDescription">Course Description</label>
            <textarea class="form-control" id="FormControlDescription" rows="3">COMP100 is an introductory course in programming. It includes programming concepts, logic and program structures.</textarea>
        </div>
        <div class="form-group">
            <label for="FormControlSelectSeason">Select the Season</label>
            <select class="form-control" id="FormControlSelectSeason">
                <option selected>Winter</option>
                <option>Summer</option>
                <option>Fall</option>
            </select>
        </div>
        <div class="form-group">
            <label for="FormControlSelectSection">Select the Sections</label>
            <br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="sectionCheckbox1" value="option1" checked>
                <label class="form-check-label" for="sectionCheckbox1">001</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="sectionCheckbox2" value="option2" checked>
                <label class="form-check-label" for="sectionCheckbox2">002</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="sectionCheckbox3" value="option3">
                <label class="form-check-label" for="sectionCheckbox3">003</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="sectionCheckbox4" value="option3">
                <label class="form-check-label" for="sectionCheckbox4">004</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="sectionCheckbox5" value="option3" disabled>
                <label class="form-check-label" for="sectionCheckbox5">005</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="sectionCheckbox6" value="option3" checked>
                <label class="form-check-label" for="sectionCheckbox6">006</label>
            </div>
        </div>

        <div class="form-group">
            <label for="FormControlSelectStatus">Select the Status of the course</label>
            <select class="form-control" id="FormControlSelectStatus">
                <option selected>Open</option>
                <option>Closed</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
