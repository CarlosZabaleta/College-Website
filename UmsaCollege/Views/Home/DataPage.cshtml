@model UmsaCollege.Models.Course
@{
    Layout = "_Layout";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Data Page</h1>
        <p class="lead">You can update or display the course information.</p>
    </div>
</div>
@if (Model == null) {
    <div class="p-3 mb-2 bg-danger text-white container">
        <h1 class="display-4">No course selected</h1>
        <p class="lead">Please select a course in DisplayPage and then edit it here</p>
    </div>
} else {
    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-controller="Home" asp-action="DisplayPage" method="post">
                    @Html.HiddenFor(m => Model.CourseID)
                    <div class="form-group">
                        <label asp-for="Name">Course Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="InputName" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Code" for="InputCode">Course Code</label>
                        <input asp-for="Code" type="text" class="form-control" id="InputCode" value="@Model.Code">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" for="FormControlDescription">Course Description</label>
                        <textarea asp-for="Description" class="form-control" id="FormControlDescription" rows="3">@Model.Description</textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="Season" for="FormControlSelectSeason">Select the Season</label>
                        <select asp-for="Season" class="form-control" id="FormControlSelectSeason">
                            <option selected>@Model.Season</option>
                            @if (@Model.Name == "Fall") {
                                <option>Winter</option>
                            } else {
                                <option>Fall</option>
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" for="FormControlSelectStatus">Select the Status of the course</label>
                        <select asp-for="Status" class="form-control" id="FormControlSelectStatus">
                            <option selected>@Model.Status</option>
                            @if (@Model.Status == "Full") {
                                <option>Closed</option>
                            } else {
                                <option>Full</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        @*<button type="submit" value="cancel" class="btn btn-danger" asp-controller="Home" asp-action="DisplayPage">
                Delete
            </button>*@
                    </div>
                </form>
            </div>

            <div class="col-3">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-primary">Students enrolled</li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <p class="no-padding">Carlos Zabaleta</p>
                        <p class="card-text"><medium class="text-muted">3321</medium></p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <p class="no-padding">Franz Cuevas</p>
                        <p class="card-text"><medium class="text-muted">7721</medium></p>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <p class="no-padding">Sergio Apaza</p>
                        <p class="card-text"><medium class="text-muted">1002</medium></p>
                    </li>
                </ul>
                <form>
                    <button type="submit" value="AddStudent" class="btn btn-info" asp-controller="Home" asp-action="UserPage">
                        Add Student
                    </button>
                </form>
            </div>
        </div>
    </div>
}