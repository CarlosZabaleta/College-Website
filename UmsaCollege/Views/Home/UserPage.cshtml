@model UmsaCollege.Models.Student
@{
    Layout = "_Layout";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">User Page</h1>
        <p class="lead">You can enroll or unenroll an student to a course</p>
    </div>
</div>
@if (Model == null) {
    <div class="p-3 mb-2 bg-danger text-white container">
        <h1 class="display-4">No course selected</h1>
        <p class="lead">Please select a course in DisplayPage and then add students here</p>
    </div>
} else {
    <div class="container col-6 d-flex justify-content-between align-items-center">
        <h2>Enrroll Student</h2>
    </div>


    <div class="container col-5 space-between">

        <ul class="list-group">
            <li class="list-group-item list-group-item-primary">Students</li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <form method="post" asp-controller="Home" asp-action="AddStudent" asp-route-id="@Model.CourseID">
                    <input hidden asp-for="Name" type="text" value="Karla">
                    <input hidden asp-for="LastName" type="text" value="Licea">
                    <input hidden asp-for="Gender" type="text" value='F'>
                    <input hidden asp-for="StudentCode" type="text" value="9999">
                    <input hidden asp-for="CourseID" type="text" value="@Model.CourseID">
                    <p class="no-padding">Karla Licea</p>
                    <p class="no-padding"><medium class="text-muted">9999</medium></p>
                    <button class="btn btn-primary">Register</button>
                </form>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <form method="post" asp-controller="Home" asp-action="AddStudent" asp-route-id="@Model.CourseID">
                    <input hidden asp-for="Name" type="text" value="Franz">
                    <input hidden asp-for="LastName" type="text" value="Cuevas">
                    <input hidden asp-for="Gender" type="text" value='F'>
                    <input hidden asp-for="StudentCode" type="text" value="8888">
                    <input hidden asp-for="CourseID" type="text" value="@Model.CourseID">
                    <p class="no-padding">Franz Cuevas</p>
                    <p class="card-text"><medium class="text-muted">7721</medium></p>
                    <button class="btn btn-primary">Register</button>
                </form>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <form method="post" asp-controller="Home" asp-action="AddStudent" asp-route-id="@Model.CourseID">
                    <input hidden asp-for="Name" type="text" value="Sergio">
                    <input hidden asp-for="LastName" type="text" value="Apaza">
                    <input hidden asp-for="Gender" type="text" value='F'>
                    <input hidden asp-for="StudentCode" type="text" value="7777">
                    <input hidden asp-for="CourseID" type="text" value="@Model.CourseID">
                    <p class="no-padding">Sergio Apaza</p>
                    <p class="card-text"><medium class="text-muted">1002</medium></p>
                    <button class="btn btn-primary">Register</button>
                </form>
            </li>
        </ul>
    </div>
}

